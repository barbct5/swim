{erl_opts, [
  debug_info,
  warn_unused_vars,
  warn_shadow_vars,
  warn_unused_export,
  warn_unused_function,
  warn_unused_record,
  warn_deprecated_function,
  warn_deprecated_type,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_untyped_record,
  fail_on_warning
  ]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{edoc_opts, [
  {doclet, edown_doclet},
  {app_default, "http://www.erlang.org/doc/man"},
  {doc_path, []},
  {top_level_readme, {"./README.md", "https://github.com/barbct5/swim", "master"}}
]}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
{dialyzer, [
  {warnings, [
    underspecs,
    race_conditions,
    error_handling
  ]}
]}.
{profiles, [
  {docs, [
    {deps, [
      {edown, {git, "https://github.com/uwiger/edown.git", {tag, "0.7"}}}
    ]}
  ]},
  {test, [
    {deps, [
      {damocles, {git, "https://github.com/lostcolony/damocles.git", {branch, master}}},
      {proper, {git, "https://github.com/manopapad/proper.git", {branch, master}}}
    ]}
  ]}
]}.
