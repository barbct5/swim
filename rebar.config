{erl_opts, [
  debug_info,
  warn_unused_vars,
  warn_shadow_vars,
  warn_unused_export,
  warn_unused_function,
  warn_unused_record,
  warn_deprecated_function,
  warn_deprecated_type,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_untyped_record,
  fail_on_warning
  ]}.
{deps, []}.
{xref_warnings, true}.
{xref_checks, [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
]}.
{dialyzer, [
  {warnings, [
    underspecs,
    race_conditions,
    error_handling
  ]}
]}.
{profiles, [
  {test, [
    {deps, [
      {damocles, {git, "https://github.com/lostcolony/damocles.git", {branch, master}}},
      {proper, {git, "https://github.com/manopapad/proper.git", {branch, master}}}
    ]}
  ]}
]}.
